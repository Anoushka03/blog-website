<%- include('partials/headerCompose') %>
<h1>Compose</h1>
<h4>Author: <%=username%></h4>
<form action="/users/compose" method="POST">
    
        <div class="form-group">
        
          <label >Title</label>
          <textarea rows="1" cols="170" class="form-control"  name="postTitle"><%=title_edit%></textarea>
          <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
        </div>
        <div class="form-group">
          <label >Post</label>
          <textarea rows="5" cols="170" class="form-control" name="postBody"><%=body_edit%></textarea>
        </div>
        
        <button type="submit" class="btn btn-primary">Publish</button>
      
</form>

<%- include('partials/footer') %>