<%- include('partials/headerDashboard') %>
<h1 id="welcome">Welcome <%=username%></h1>
<%let len=blogs.length;%>

<%for(let i=0;i<len;i++){%>
    <h1 id="ph"><%=blogs[i].title%></h1>
    <p id="pp"><%=blogs[i].post.substring(0,30)%>...<a href="/users/posts/<%=blogs[i]._id%>">Read more</a></p>
    <br>
<%}%>
</div>

<div class="menu">
  <form onsubmit="checkextension()" action="/users/dashboard"  method="post"  role="form" enctype="multipart/form-data">
                                   
                                        
    <div class="form-group">
        <img id="resize" src="/uploads/<%=img_name%>" alt="<%=img_name%>" >
        <!-- <label for="file" >Upload File</label> -->
        <p style="color: aliceblue; font-size: 1rem;">* Valid file types are :.png, .jpeg, .jpg, .gif</p>
        <div >
            <input type="file" class="form-control bg" name="file" id="fUpload"  required/>
        </div>
    </div>
    

    <div class="form-group">
        <!-- Button -->                                        
        <div >
        <input type="submit" name="upload" value="Upload" class="btn1"> 
         
        </div>
        <%=img_error%>
    </div>
    
    
    
    
    
</form>
  <form action="/users/dashboard" method="POST">
    <input type="submit" name="remove" value="Remove" class="btn1"> 
  </form>
    <div class="search-box">
      <!-- <input class="search-txt" type="text" name="search" placeholder="  Search Your Blogs.."> -->
      <!-- <a class="search-btn" href="#"><i class="fa fa-search" aria-hidden="true"></i></a>         -->
      <br>
      <form action="/users/dashboard" method="POST">
        <input class="search-txt" type="text" name="search" placeholder="  Search Your Blogs.." autocomplete="off">
        <button  class="log" type="submit" name="searchBar" value="Search" ><i class="fa fa-search" aria-hidden="true"></i></button>
      </form>
    </div>
    <%let len1=searches.length;%>
    <div class="searched" id="style-1">
        <%for(let i=0;i<len1;i++){%>
            
            <p><%=searches[i].title %><br>
            <%=searches[i].post.substring(0,30)%>...<a href="/users/posts/<%=searches[i]._id%>">Read more</a> %></p>  
            
        <%}%>
      
        <!-- <p style="color:white"><%=title_error%></p> -->
        <div class="titerror">
          <p style="color:white"><%=title_error%></p>
        </div>
      </div>
</div>
</div>

